<form method="post" action="{{ path('city_delete', {'id': city.cityId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.cityId) }}">
    <button class="btn">Delete</button>
</form>
